<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Luminous.TimeSavers.InsertGuid.Themes"
    >
    <Style x:Key="InsertGuid.Run.Note" TargetType="{x:Type Run}">
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Foreground" Value="Gray" />
    </Style>

    <Style x:Key="InsertGuid.Run.H1" TargetType="{x:Type Run}">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="InsertGuid.Run.H2" TargetType="{x:Type Run}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
</ResourceDictionary>